{
    "views": {
        "personal-day": {
            "name": "个人日视图",
            "description": "纵轴 = 小时，横轴 = 一天（单列）",
            "xAxis": {
                "type": "single-day",
                "domain": [
                    0,
                    1
                ],
                "range": [
                    0.10,
                    0.95
                ],
                "label": "今天",
                "grid": false
            },
            "yAxis": {
                "type": "time-hours",
                "domain": [
                    0,
                    24
                ],
                "range": [
                    0.05,
                    0.90
                ],
                "label": "小时",
                "grid": true,
                "gridInterval": 1
            },
            "layout": {
                "type": "vertical-stack",
                "minEventHeight": 20,
                "maxLayers": 5,
                "overlapStrategy": "stack"
            }
        },
        "personal-week": {
            "name": "个人周视图",
            "description": "纵轴 = 小时，横轴 = 天",
            "xAxis": {
                "type": "days-of-week",
                "domain": [
                    "Mon",
                    "Tue",
                    "Wed",
                    "Thu",
                    "Fri",
                    "Sat",
                    "Sun"
                ],
                "range": [
                    0.05,
                    0.95
                ],
                "label": "星期",
                "grid": true
            },
            "yAxis": {
                "type": "time-hours",
                "domain": [
                    0,
                    24
                ],
                "range": [
                    0.05,
                    0.90
                ],
                "label": "小时",
                "grid": true,
                "gridInterval": 1
            },
            "layout": {
                "type": "grid",
                "minEventHeight": 20,
                "maxLayers": 3,
                "overlapStrategy": "stack"
            }
        },
        "personal-month": {
            "name": "个人月视图",
            "description": "纵轴 = 拼接天，横轴 = 星期",
            "xAxis": {
                "type": "days-of-week",
                "domain": [
                    "Mon",
                    "Tue",
                    "Wed",
                    "Thu",
                    "Fri",
                    "Sat",
                    "Sun"
                ],
                "range": [
                    0,
                    100
                ],
                "label": "星期",
                "grid": true
            },
            "yAxis": {
                "type": "weeks-of-month",
                "domain": [
                    1,
                    2,
                    3,
                    4,
                    5,
                    6
                ],
                "range": [
                    0,
                    100
                ],
                "label": "周",
                "grid": true
            },
            "layout": {
                "type": "calendar-grid",
                "minEventHeight": 30,
                "maxLayers": 2,
                "overlapStrategy": "hide"
            }
        },
        "group-day": {
            "name": "组日视图",
            "description": "纵轴 = 用户，横轴 = 小时",
            "xAxis": {
                "type": "time-hours",
                "domain": [
                    0,
                    24
                ],
                "range": [
                    0.08,
                    0.95
                ],
                "label": "小时",
                "grid": true,
                "gridInterval": 2
            },
            "yAxis": {
                "type": "users",
                "domain": [
                    "user1",
                    "user2",
                    "user3",
                    "user4"
                ],
                "range": [
                    0.08,
                    0.92
                ],
                "label": "用户",
                "grid": true
            },
            "layout": {
                "type": "horizontal-stack",
                "minEventHeight": 30,
                "maxLayers": 1,
                "overlapStrategy": "stack"
            }
        },
        "group-week": {
            "name": "组周视图",
            "description": "纵轴 = 用户，横轴 = 天",
            "xAxis": {
                "type": "days-of-week",
                "domain": [
                    "Mon",
                    "Tue",
                    "Wed",
                    "Thu",
                    "Fri"
                ],
                "range": [
                    0.08,
                    0.95
                ],
                "label": "星期",
                "grid": true
            },
            "yAxis": {
                "type": "users",
                "domain": [
                    "user1",
                    "user2",
                    "user3",
                    "user4",
                    "user5"
                ],
                "range": [
                    0.08,
                    0.92
                ],
                "label": "用户",
                "grid": true
            },
            "layout": {
                "type": "grid",
                "minEventHeight": 25,
                "maxLayers": 2,
                "overlapStrategy": "stack"
            }
        }
    },
